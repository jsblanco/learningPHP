<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet"/>
    {% endblock %}
</head>
<body>
{% block header %}
    <header>
        <h1>Symfony tasks</h1>
        <div id="header-menu">
            <a href="{{ path('index') }}">Home</a>
            <a href="{{ path('tasks') }}">Tasks</a>
            {% if app.user %}
                <a href="">Hello, 
                    {{ app.user.name ~' '~ app.user.surname }}
                </a>
                <a href="{{ path('user.logout') }}">Logout</a>
            {% else %}
                <a href="{{ path('user.login') }}">Login</a>
                <a href="{{ path('user.register') }}">Register</a>
            {% endif %}
        </div>
    </header>
{% endblock %}
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
